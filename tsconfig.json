{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"src/typings/**/*.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"vite.config.*",
	],
	"exclude": [
		"/dist/**",
		"node_modules"
	],
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"types": []
	}
}
